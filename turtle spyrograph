import turtle    #no need to install the turtle module in python, just import
turtle.pensize(3)  #thickness of the line
turtle.bgcolor('black')   #choosing the background colour, default is white
turtle.speed(0)     #specifying the speed of the turtle
for i in range (6):   #using the for loop to draw the circles
           for colours in['red','yellow','blue','green','magenta','cyan']:
                      turtle.color(colours)
                      turtle.circle(100)
                      turtle.left(10)
turtle.hideturtle()

